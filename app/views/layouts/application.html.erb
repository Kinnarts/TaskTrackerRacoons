<!DOCTYPE html>
<html>
  <head>
    <title>TaskTrackerRacoons</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
  </head>
  <body>
    <div class="container">
      <div class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'TaskTrackerRacoons', root_path, class: "navbar-brand" %>
          <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to 'Личный кабинет', edit_user_registration_path(current_user) %></li>
                <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Войти', new_user_session_path, method: :get %></li>
                <li><%= link_to 'Зарегистрироваться', new_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
      <% end -%>
      <div class="jumbotron">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
